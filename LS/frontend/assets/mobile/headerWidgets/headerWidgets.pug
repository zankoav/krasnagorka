mixin header_widgets_mobile
	.header-widgets
		.header-widgets__menu-button
			img.header-widgets__menu-button-icon(src=require('./../img/menu-icon.svg').default)
		a.header-widgets__logo(href='/')
			img.header-widgets__logo-icon(src=require('./../img/logo.png').default)
		.header-widgets__contacts-button
			img.header-widgets__contacts-button-icon(src=require('./../img/contacts-icon.svg').default)
		.header-widgets__body
		.header-widgets__today 
			+today()
		.header-widgets__weather
			+weather_mobile()
		.header-widgets__bottom-space

